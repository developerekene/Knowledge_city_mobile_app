<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.signupActivity"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/id_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#0726C1"
        android:orientation="horizontal" />


    <TextView
        android:id="@+id/sign_up_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:fontFamily="cursive"
        android:text="Please Signup"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="45sp"
        android:textStyle="bold" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/loginin_buttonin_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/id_linear_layout"
        android:layout_alignParentRight="true"
        android:layout_marginTop="15dp"
        android:layout_marginRight="20dp"
        android:background="#00FFFFFF"
        android:text="Or Login Here"
        android:textAllCaps="false" />

    <EditText
        android:id="@+id/first_name_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/loginin_buttonin_signup"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:hint="First Name"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/first_name_required"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/loginin_buttonin_signup"
        android:layout_alignParentRight="true"
        android:layout_marginTop="25sp"
        android:layout_marginRight="40dp"
        android:text="Required *"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="12dp" />

    <EditText
        android:id="@+id/middle_name_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/first_name_id"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="20dp"
        android:inputType="textPersonName"
        android:layout_marginBottom="20dp"
        android:hint="Middle Name" />

    <TextView
        android:id="@+id/middle_name_required"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/first_name_required"
        android:layout_alignParentRight="true"
        android:layout_marginTop="65sp"
        android:layout_marginRight="40dp"
        android:text="Required *"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="12dp" />

    <EditText
        android:id="@+id/last_name_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/middle_name_id"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="20dp"
        android:inputType="textPersonName"
        android:layout_marginBottom="20dp"
        android:hint="Sur Name" />

    <TextView
        android:id="@+id/sur_name_required"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/middle_name_required"
        android:layout_alignParentRight="true"
        android:layout_marginTop="60dp"
        android:layout_marginRight="40dp"
        android:text="Required *"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="12dp" />

    <EditText
        android:id="@+id/user_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/last_name_id"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:hint="Email"
        android:inputType="textEmailAddress" />

    <TextView
        android:id="@+id/user_email_required"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sur_name_required"
        android:layout_alignParentRight="true"
        android:layout_marginTop="60dp"
        android:layout_marginRight="40dp"
        android:text="Required *"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="12dp" />
    <EditText
        android:id="@+id/user_phone_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_email"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="20dp"
        android:inputType="phone"
        android:layout_marginBottom="20dp"
        android:hint="Phone Number" />

    <TextView
        android:id="@+id/user_phone_required"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_email_required"
        android:layout_alignParentRight="true"
        android:layout_marginTop="60dp"
        android:layout_marginRight="40dp"
        android:text="Required *"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="12dp" />

    <EditText
        android:id="@+id/user_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_phone_number"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:hint="Password"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/user_pass_required"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_phone_required"
        android:layout_alignParentRight="true"
        android:layout_marginTop="60dp"
        android:layout_marginRight="40dp"
        android:text="Required *"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="12dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:textColor="@color/white"
        android:background="#0726C1"/>
</RelativeLayout>