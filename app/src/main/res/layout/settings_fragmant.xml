<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAF9F9"
    tools:context=".Activities.MainActivity">


 <TextView
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_marginLeft="20dp"
     android:layout_marginTop="20dp"
     android:text="Settings"
     android:layout_centerHorizontal="true"
     android:textColor="#0726C1"
     android:textSize="25dp"
     android:textStyle="bold" />

 <ImageView
     android:id="@+id/profile_image"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_centerHorizontal="true"
     android:layout_marginLeft="20dp"
     android:layout_marginTop="70dp"
     android:src="@drawable/unsplash" />

    <TextView
        android:id="@+id/profile_full_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/profile_image"
        android:fontFamily="cursive"
        android:text="Bamidele Jane"
        android:textColor="#0726C1"
        android:textSize="30dp" />

 <TextView
     android:id="@+id/profile_email"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_below="@id/profile_full_name"
     android:layout_centerHorizontal="true"
     android:text="bamidelejane@gmail.com"
     android:textColor="#0726C1"
     android:textSize="15dp" />

 <androidx.appcompat.widget.AppCompatButton
     android:id="@+id/profile_edit_button"
     android:layout_width="150dp"
     android:layout_height="wrap_content"
     android:layout_below="@+id/profile_email"
     android:layout_centerHorizontal="true"
     android:layout_marginTop="10dp"
     android:background="#00FFFFFF"
     android:text="Edit Photo" />


 <androidx.appcompat.widget.AppCompatButton
     android:id="@+id/profile_edit_button_profile"
     android:layout_width="350dp"
     android:layout_height="wrap_content"
     android:layout_below="@id/profile_edit_button"
     android:layout_centerHorizontal="true"
     android:layout_marginTop="10dp"
     android:background="#0726C1"
     android:text="Edit Profile"
     android:textColor="@color/white" />

 <androidx.appcompat.widget.AppCompatButton
     android:id="@+id/profile_edit_button_password"
     android:layout_width="350dp"
     android:layout_height="wrap_content"
     android:text="Edit Password"
     android:layout_centerHorizontal="true"
     android:layout_below="@id/profile_edit_button_profile"
     android:layout_marginTop="10dp"
     android:textColor="@color/white"
     android:background="#0726C1"/>

 <androidx.appcompat.widget.AppCompatButton
     android:id="@+id/profile_edit_button_user_phone"
     android:layout_width="350dp"
     android:layout_height="wrap_content"
     android:text="Edit Phone Number"
     android:layout_centerHorizontal="true"
     android:layout_below="@id/profile_edit_button_password"
     android:layout_marginTop="10dp"
     android:textColor="@color/white"
     android:background="#0726C1"/>
 <androidx.appcompat.widget.AppCompatButton
     android:id="@+id/profile_edit_button_address"
     android:layout_width="350dp"
     android:layout_height="wrap_content"
     android:text="Edit Address"
     android:layout_centerHorizontal="true"
     android:layout_below="@id/profile_edit_button_user_phone"
     android:layout_marginTop="10dp"
     android:textColor="@color/white"
     android:background="#0726C1"/>


</RelativeLayout>