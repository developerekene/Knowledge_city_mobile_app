<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0726C1"
    tools:context=".Activities.CirclerAcitivity">

    <me.relex.circleindicator.CircleIndicator3
        android:id="@+id/CircleIndicator3"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_above="@id/view_pager_button"
        android:layout_marginBottom="10dp"
        android:background="#0726C1"/>

    <Button
        android:id="@+id/view_pager_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@color/white"
        android:text="Next"
        android:textColor="#0726C1" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/view_pager_2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/CircleIndicator3"
        android:layout_centerInParent="true" />
</RelativeLayout>